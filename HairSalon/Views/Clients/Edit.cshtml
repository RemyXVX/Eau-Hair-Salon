@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Edit client</h2>

<br>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ClientId)

    <p>Name:</p>
    <p>@Html.EditorFor(model => model.ClientName)</p>

    <p>Stylist:</p>
    <p>@Html.DropDownList("StylistId")</p>

    <p>Description:</p>
    <p>@Html.EditorFor(model => model.ClientDescription)</p>

<br>
    <input type="submit" value="Save" class="btn" />
}
<br>
<p>@Html.ActionLink("Back to clients", "Index")</p>