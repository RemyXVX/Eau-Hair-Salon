@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Stylist(s):</h1>

@if (@Model.Count == 0)
{
  <h3>No stylist(s) as of yet. Lets input some?</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId }) </li>
}
<br>

<div>
  <span>
      <span>@Html.ActionLink("Add new stylist", "Create")</span>
      <br>
      <span>@Html.ActionLink("Add new Client", "Create", "Clients")</span>
      <br>
      <span>@Html.ActionLink("Back to home", "Index", "Home")</span>
  </span>
</div>
