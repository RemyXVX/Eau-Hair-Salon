@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>STylist(s):</h1>

@if (@Model.Count == 0)
{
  <h3>No stylist(s) as of yet. Lets input some?</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId }) </li>
}
<br>
<p>@Html.ActionLink("Back to home", "Index", "Home")</p>